---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ParticleBackground from "@/components/ParticleBackground";
import Carousel from "@/components/Carousel";
import { techStack } from "@/data/technologies";
import { workExperience, education } from "@/data/career";
import { socialItems } from "@/utils/social";
import {
	ArrowSquareOutIcon,
	DeviceMobileIcon,
	CodeIcon,
	DatabaseIcon,
	RocketLaunchIcon,
	BriefcaseIcon,
	GraduationCapIcon,
	CheckIcon,
} from "@phosphor-icons/react";
import Card from "@/components/Card.astro";
import TypewriterText from "@/components/TypewriterText";
import { ArrowDownIcon } from "@phosphor-icons/react/dist/ssr/ArrowDown";
import { ChartLineUpIcon } from "@phosphor-icons/react/dist/ssr/ChartLineUp";
import Timeline from "@/components/Timeline.astro";

const pageTitle = "Carlos Sánchez Recio - Desarrollador Mobile & Full Stack";

const typewriterTexts = [
	"mundo!",
	"desarrolladores!",
	"robots!",
	"recruiters!",
	"jedis!",
	"alienígenas!",
];
---

<BaseLayout pageTitle={pageTitle}>
	<ParticleBackground client:load />
	<section id="home" class="section-container relative z-10 md:pt-40">
		<div class="md:hidden w-full text-center mt-6">
			<TypewriterText
				prefix="Hola 👋🏻"
				texts={typewriterTexts}
				typingSpeed={100}
				deletingSpeed={50}
				pauseAfterTyping={1000}
				pauseAfterDeleting={500}
				className="text-4xl font-bold animate-slide-up text-shade-900 dark:text-shade-50"
				client:load
			/>
		</div>

		<div
			class="flex flex-col md:flex-row justify-center items-center md:items-stretch gap-8"
		>
			<div class="w-full md:w-[280px] flex-shrink-0">
				<Card
					bgColor="var(--color-shade-800)"
					padding="var(--padding-md)"
					borderRadius="var(--rounded-sm)"
					isHoverable={false}
				>
					<div
						class="aspect-[3/4] overflow-hidden rounded-[var(--rounded-xs)]"
					>
						<img
							src="/src/assets/carlos.webp"
							alt="Carlos Sánchez Recio"
							class="w-full h-full object-cover"
						/>
					</div>
				</Card>
			</div>

			<div class="w-full md:flex-1 md:self-stretch">
				<div class="hidden md:block w-full text-left">
					<TypewriterText
						prefix="Hola 👋🏻"
						texts={typewriterTexts}
						typingSpeed={100}
						deletingSpeed={50}
						pauseAfterTyping={1000}
						pauseAfterDeleting={500}
						className="text-6xl font-bold animate-slide-up text-shade-900 dark:text-shade-50"
						client:load
					/>
				</div>

				<p
					class="text-xl md:text-2xl text-shade-600 dark:text-shade-300 mb-6 mt-4 animate-slide-up text-center md:text-left"
					style="animation-delay: 0.2s;"
				>
					<span>Soy Carlos, </span>
					<span class="text-gradient font-bold"
						>Desarrollador Freelance Mobile & FullStack.</span
					>
				</p>

				<p
					class="text-lg md:text-xl text-shade-700 dark:text-shade-400 mb-8 max-w-2xl mx-auto md:mx-0 animate-slide-up text-center md:text-left"
					style="animation-delay: 0.4s;"
				>
					Especializado en tecnologías multi-plataforma y apps móviles, mi
					objetivo es traer soluciones a situaciones reales con la mejor
					experiencia para el usuario.
				</p>

				<div
					class="flex justify-center md:justify-start gap-6 animate-slide-up"
					style="animation-delay: 0.8s;"
				>
					{
						socialItems.map(({ label, href, target, icon: Icon }) => (
							<a
								href={href}
								target={target}
								class="flex items-center gap-2 text-shade-700 dark:text-shade-300"
								aria-label={label}
							>
								<Card
									bgColor="var(--color-shade-800)"
									bgColorHover="var(--color-shade-700)"
									textColor="var(--color-shade-100)"
									isHoverable={true}
								>
									<div class="p-[var(--padding-sm)] flex flex-row gap-[8px] items-center justify-center">
										<Icon size={24} />
										<p class="hidden md:block">{label}</p>
									</div>
								</Card>
							</a>
						))
					}
				</div>
			</div>
		</div>

		<div
			class="w-full flex flex-col md:flex-row justify-center gap-4 mt-8 animate-slide-up"
			style="animation-delay: 0.6s;"
		>
			<a
				href="#career"
				target="_self"
				class="w-full md:w-auto flex items-center gap-2 text-shade-700 dark:text-shade-300"
				aria-label="Ver mi trayectoria"
			>
				<Card
					bgColor="var(--color-primary-400)"
					bgColorHover="var(--color-primary-300)"
					textColor="var(--color-shade-50)"
					isHoverable={true}
					className="w-full"
				>
					<div
						class="p-[var(--padding-sm)] flex flex-row gap-[8px] items-center justify-center"
					>
						<ChartLineUpIcon size={24} />
						<p>Ver mi trayectoria</p>
					</div>
				</Card>
			</a>

			<a
				href="#freelancing"
				target="_self"
				class="w-full md:w-auto flex items-center gap-2 text-shade-700 dark:text-shade-300"
				aria-label="Ver mis servicios"
			>
				<Card
					bgColor="var(--color-shade-700)"
					bgColorHover="var(--color-shade-600)"
					textColor="var(--color-shade-50)"
					isHoverable={true}
					className="w-full"
				>
					<div
						class="p-[var(--padding-sm)] flex flex-row gap-[8px] items-center justify-center"
					>
						<RocketLaunchIcon size={24} />
						<p>Ver mis servicios</p>
					</div>
				</Card>
			</a>
		</div>

		<div class="hidden md:block absolute bottom-[48px] animate-bounce">
			<a
				href="#skills"
				target="_self"
				class="flex items-center gap-2 text-shade-700 dark:text-shade-300"
				aria-label="Ver mis habilidades"
			>
				<ArrowDownIcon
					size={24}
					weight="bold"
					color="var(--color-primary-400)"
				/>
			</a>
		</div>
	</section>

	<section
		id="skills"
		class="section-container relative z-10 bg-shade-100/50 dark:bg-shade-800/50"
	>
		<div class="mx-auto w-full">
			<div class="text-left mb-[var(--spacing-xl)] animate-on-scroll">
				<h1 class="section-title">Mis habilidades</h1>
				<p class="section-subtitle">
					Tecnologías y herramientas con las que trabajo
				</p>
			</div>

			<div class="space-y-8">
				{
					techStack.map((category) => (
						<div class="animate-on-scroll">
							<Carousel
								technologies={category.technologies}
								category={category.category}
								client:load
							/>
						</div>
					))
				}
			</div>

			<div
				class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-6 animate-on-scroll"
			>
				<Card
					bgColor="var(--color-shade-800)"
					textColor="var(--color-shade-50)"
					isHoverable={false}
					className="shadow-[0_2px_8px_rgba(0,0,0,0.3)] text-center"
				>
					<DeviceMobileIcon
						size={48}
						weight="bold"
						className="mx-auto mb-4 text-primary-400 dark:text-primary-300"
					/>
					<h3
						class="text-xl font-bold mb-2 text-shade-900 dark:text-shade-50"
					>
						Mobile Development
					</h3>
					<p class="text-shade-600 dark:text-shade-400">
						Experto en Flutter y React Native para crear apps
						multiplataforma de alto rendimiento.
					</p>
				</Card>

				<Card
					bgColor="var(--color-shade-800)"
					textColor="var(--color-shade-50)"
					isHoverable={false}
					className="shadow-[0_2px_8px_rgba(0,0,0,0.3)] text-center"
				>
					<CodeIcon
						size={48}
						weight="bold"
						className="mx-auto mb-4 text-primary-400 dark:text-primary-300"
					/>
					<h3
						class="text-xl font-bold mb-2 text-shade-900 dark:text-shade-50"
					>
						Full Stack
					</h3>
					<p class="text-shade-600 dark:text-shade-400">
						Desarrollo completo desde frontend con React o Angular hasta
						backend robusto con Node.js o Python.
					</p>
				</Card>

				<Card
					bgColor="var(--color-shade-800)"
					textColor="var(--color-shade-50)"
					isHoverable={false}
					className="shadow-[0_2px_8px_rgba(0,0,0,0.3)] text-center"
				>
					<DatabaseIcon
						size={48}
						weight="bold"
						className="mx-auto mb-4 text-primary-400 dark:text-primary-300"
					/>
					<h3
						class="text-xl font-bold mb-2 text-shade-900 dark:text-shade-50"
					>
						Data & AI
					</h3>
					<p class="text-shade-600 dark:text-shade-400">
						Especialización en Big Data e Inteligencia Artificial para
						soluciones inteligentes y visualización de datos.
					</p>
				</Card>
			</div>
		</div>
	</section>

	<section id="career" class="section-container relative z-10">
		<div class="mx-auto w-full">
			<div class="text-left mb-[var(--spacing-xl)] animate-on-scroll">
				<h2 class="section-title">Mi trayectoria</h2>
				<p class="section-subtitle">
					Experiencia profesional y formación académica
				</p>
			</div>

			<div class="mb-16">
				<h3
					class="text-3xl font-bold text-primary-500 dark:text-primary-300 mb-8 flex items-center gap-3 animate-on-scroll"
				>
					<GraduationCapIcon size={32} weight="bold" />
					Formación Académica
				</h3>

				<Timeline items={education} />
			</div>

			<div class="mb-[var(--spacing-lg)]">
				<h3
					class="text-3xl font-bold text-primary-500 dark:text-primary-300 mb-8 flex items-center gap-3 animate-on-scroll"
				>
					<BriefcaseIcon size={32} weight="bold" />
					Experiencia Laboral
				</h3>

				<Timeline items={workExperience} />
			</div>
		</div>
	</section>

	<section
		id="freelancing"
		class="section-container relative z-10 bg-gradient-to-br from-primary-50 to-primary-100 dark:from-primary-900/20 dark:to-primary-800/20"
	>
		<div class="max-w-4xl mx-auto text-center">
			<div class="animate-on-scroll">
				<div class="mb-6">
					<RocketLaunchIcon
						size={64}
						weight="bold"
						className="mx-auto text-primary-500 dark:text-primary-300 animate-float"
					/>
				</div>

				<h2 class="section-title mb-6">Servicios Freelance</h2>

				<p
					class="text-xl md:text-2xl text-shade-700 dark:text-shade-300 mb-8 leading-relaxed"
				>
					¿Tienes un proyecto en mente? Ofrezco servicios de desarrollo
					móvil, web y soluciones personalizadas.
					<br class="hidden md:block" />
					<span class="font-bold text-primary-500 dark:text-primary-300">
						Desde MVP hasta aplicaciones empresariales completas.
					</span>
				</p>

				<Card
					bgColor="var(--color-shade-800)"
					textColor="var(--color-shade-50)"
					padding="var(--padding-xl)"
					isHoverable={false}
					className="max-w-2xl mx-auto mb-16"
				>
					<h3
						class="text-2xl font-bold text-shade-900 dark:text-shade-50 mb-4"
					>
						¿Qué puedo hacer por ti?
					</h3>
					<ul
						class="text-left space-y-3 text-shade-700 dark:text-shade-300"
					>
						<li class="flex items-center gap-3">
							<CheckIcon
								size={18}
								weight="bold"
								className="text-primary-500 dark:text-primary-300 flex-shrink-0"
							/>
							<span
								>Desarrollo de aplicaciones móviles multiplataforma
								(Flutter & React Native).</span
							>
						</li>
						<li class="flex items-center gap-3">
							<CheckIcon
								size={18}
								weight="bold"
								className="text-primary-500 dark:text-primary-300 flex-shrink-0"
							/>
							<span
								>Desarrollo web full stack con tecnologías modernas.</span
							>
						</li>
						<li class="flex items-center gap-3">
							<CheckIcon
								size={18}
								weight="bold"
								className="text-primary-500 dark:text-primary-300 flex-shrink-0"
							/>
							<span>APIs y backends escalables.</span>
						</li>
						<li class="flex items-center gap-3">
							<CheckIcon
								size={18}
								weight="bold"
								className="text-primary-500 dark:text-primary-300 flex-shrink-0"
							/>
							<span>Soluciones de análisis de datos e IA.</span>
						</li>
						<li class="flex items-center gap-3">
							<CheckIcon
								size={18}
								weight="bold"
								className="text-primary-500 dark:text-primary-300 flex-shrink-0"
							/>
							<span>Consultoría técnica y arquitectura de software</span>
						</li>
					</ul>
				</Card>

				<div class="flex flex-col items-center justify-center w-full">
					<a
						href="https://linktr.ee/charlymech"
						target="_blank"
						class="w-full md:w-[350px]"
					>
						<Card
							bgColor="var(--color-primary-400)"
							bgColorHover="var(--color-primary-300)"
							textColor="var(--color-shade-50)"
							isHoverable={true}
						>
							<div
								class="p-[var(--padding-sm)] flex flex-row gap-2 items-center justify-center"
							>
								<span class="text-base font-semibold"
									>Ver servicios completos</span
								>
								<ArrowSquareOutIcon size={18} />
							</div>
						</Card>
					</a>

					<p class="mt-6 text-shade-600 dark:text-shade-400 text-center">
						Visita mi página de servicios para ver proyectos, precios y
						más información.
					</p>
				</div>
			</div>
		</div>
	</section>
</BaseLayout>
